<%= form_with(model: @user) do |form| %>
       <% if @user.errors.any? %> 
        <% @user.errors.full_messages.each do |message| %> 
            <%= message %> 
        <% end %>
    <% end %> 

    <div>
        <%= form.label :username %>
        <%= form.text_field :username %>
    </div>

    <div>
        <%= form.label :email %>
        <%= form.text_field :email %>
    </div>

    <div>
        <%= form.label :password %>
        <%= form.password_field :password %>
    </div>

    <div>
        <%= form.submit "Sign-up Now!" %>
    </div>
<% end %>
